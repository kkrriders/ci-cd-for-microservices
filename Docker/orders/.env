# Server Configuration
PORT=8083
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://root:example@mongo:27017/Services_db?authSource=admin
MONGODB_USER=root
MONGODB_PASSWORD=example
MONGODB_DATABASE=Services_db

# Redis Configuration
REDIS_URI=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=  # If you set a password for Redis
REDIS_TTL=3600   # Cache TTL in seconds

# API Configuration
API_PREFIX=/api/v1
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/orders-service.log

# Security
CORS_ORIGIN=*
JWT_SECRET=your_jwt_secret_here  # If you implement authentication

# Application Performance
COMPRESSION_ENABLED=true
BODY_PARSER_LIMIT=10mb

# Service Discovery
CATALOG_SERVICE_URL=http://catalog:8082
